# Environment Variables Configuration Template
# Copy these to your Heroku Config Vars

BOT_TOKEN=xxx

TRANSCRIBE_ENGINE=whisper
# whisper = Use OpenAI Whisper engine (local, free, slower)
# api = Use OpenAI Whisper API (faster, costs money)

TRANSCRIBE_APIKEY=0
# If using 'api' engine, set your OpenAI API Key
# Get key from: https://platform.openai.com/account/api-keys

TRANSCRIBE_AUTOMATICALLY=true
# true = Auto-transcribe everything
# false = Only transcribe via context menu command

TRANSCRIBE_VMS_ONLY=true
# true = Only allow transcribing voice messages
# false = Allow transcribing other audio/video (may cause errors)

ADMIN_USERS=123456789,987654321
# Comma-separated list of admin user IDs

ADMIN_ROLE=0
# Discord role ID for admin access
# 0 = disabled
# Note: Requires Server Members intent if enabled
